{
  "name": "meshaway",
  "version": "0.1.0",
  "description": "Local multi-client bridge that normalizes GitHub/Claude streams to ACP.",
  "type": "module",
  "bin": {
    "mesh": "./dist/meshaway.js"
  },
  "scripts": {
    "build": "node ./esbuild.config.mjs && node ./scripts/build-ui-assets.mjs",
    "dev": "tsx src/index.ts",
    "start": "node dist/meshaway.js",
    "typecheck": "tsc --noEmit",
    "test": "node --test --import tsx ./tests/**/*.test.ts",
    "smoke": "tsx ./tests/smoke.ts",
    "build:native": "npm run build && pkg . --targets node18-macos-arm64 --output release/mesh"
  },
  "keywords": [
    "cli",
    "acp",
    "bridge",
    "hono",
    "meshaway"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@base-ui/react": "^1.0.0-beta.6",
    "@hono/node-server": "^1.14.4",
    "commander": "^14.0.1",
    "esbuild": "^0.25.10",
    "hono": "^4.9.6",
    "lucide-react": "^0.542.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/node": "^24.3.3",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "pkg": "^5.8.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "pkg": {
    "assets": [
      "dist/ui/**/*"
    ],
    "scripts": [
      "dist/meshaway.js"
    ],
    "targets": [
      "node18-macos-arm64"
    ]
  }
}
