{
  "name": "@offbeatport/meshaway",
  "version": "0.1.1",
  "description": "Protocol bridge for agentic tools",
  "type": "module",
  "bin": {
    "meshaway": "./dist/node/meshaway.mjs"
  },
  "scripts": {
    "build": "tsx scripts/build.ts",
    "dev": "tsx watch src/cli.ts",
    "dev:hub": "concurrently -k -n hub-server,hub-ui -c cyan,magenta \"pnpm run dev:hub-server\" \"pnpm run dev:hub-ui\"",
    "dev:hub-server": "tsx watch src/cli.ts hub --no-open",
    "dev:hub-ui": "vite --config src/hub/ui/vite.config.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run test/unit",
    "test:integration": "vitest run test/integration",
    "test:e2e": "pnpm run build && vitest run test/e2e",
    "test:watch": "vitest",
    "build:native": "tsx scripts/build-native.ts",
    "release": "pnpm run build:native && pnpm run release:npm && pnpm run release:github && pnpm run release:homebrew",
    "release:version": "pnpm changeset version && pnpm exec tsx scripts/sync-version.ts && pnpm install",
    "release:npm": "pnpm run build && pnpm changeset publish",
    "release:github": "tsx scripts/release-github.ts",
    "release:homebrew": "tsx scripts/release-homebrew.ts"
  },
  "keywords": [
    "cli",
    "acp",
    "bridge",
    "meshaway"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@base-ui/react": "^1.0.0-beta.6",
    "@hono/node-server": "^1.14.4",
    "ansi-to-react": "^6.2.6",
    "arktype": "^2.1.29",
    "chalk": "^5.3.0",
    "commander": "^14.0.1",
    "copilot": "^0.0.2",
    "hono": "^4.9.6",
    "lucide-react": "^0.542.0",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "prism-react-renderer": "^2.4.1",
    "prismjs": "^1.30.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.0.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@github/copilot-sdk": "^0.1.25",
    "@google/gemini-cli": "^0.28.0",
    "@types/node": "^24.3.3",
    "@types/prismjs": "^1.26.6",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.25",
    "@vitejs/plugin-react": "^4.3.4",
    "@yao-pkg/pkg": "^6.14.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.10",
    "opencode-ai": "^1.2.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^6.0.3",
    "vitest": "^4.0.18"
  },
  "optionalDependencies": {
    "better-sqlite3": "^11.6.0"
  },
  "packageManager": "pnpm@10.27.0"
}
