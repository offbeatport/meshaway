{
  "name": "meshaway",
  "version": "0.1.0",
  "description": "High-performance protocol bridge for agentic tools",
  "type": "module",
  "bin": {
    "meshaway": "./dist/node/meshaway.mjs"
  },
  "scripts": {
    "build": "tsx scripts/build.ts",
    "dev": "tsx scripts/dev.ts",
    "dev:ui": "cd src/hub/ui-app && vite",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run src/test/unit",
    "test:integration": "vitest run src/test/integration",
    "test:watch": "vitest",
    "build:native": "pnpm run build && tsx scripts/package-release.ts"
  },
  "keywords": ["cli", "acp", "bridge", "meshaway"],
  "license": "Apache-2.0",
  "dependencies": {
    "@base-ui/react": "^1.0.0-beta.6",
    "@hono/node-server": "^1.14.4",
    "arktype": "^2.1.29",
    "chalk": "^5.3.0",
    "commander": "^14.0.1",
    "hono": "^4.9.6",
    "lucide-react": "^0.542.0",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.0.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "@types/node": "^24.3.3",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.25",
    "autoprefixer": "^10.4.20",
    "esbuild": "^0.25.10",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^6.0.3",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.27.0"
}
