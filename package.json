{
  "name": "meshaway",
  "version": "0.1.0",
  "description": "High-performance protocol bridge for agentic tools",
  "type": "module",
  "bin": {
    "meshaway": "./dist/node/meshaway.mjs"
  },
  "scripts": {
    "build": "tsx scripts/build.ts",
    "dev": "tsx watch src/cli.ts",
    "dev:hub": "concurrently -k -n hub-server,hub-ui -c cyan,magenta \"pnpm run dev:hub-server\" \"pnpm run dev:hub-ui\"",
    "dev:hub-server": "tsx watch src/cli.ts hub --no-open",
    "dev:hub-ui": "vite --config src/hub/ui/vite.config.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run src/test/unit",
    "test:integration": "vitest run src/test/integration",
    "test:e2e": "vitest run src/test/e2e",
    "runner": "tsx scripts/runner.ts",
    "test:watch": "vitest",
    "build:native": "pnpm run build && tsx scripts/package-release.ts"
  },
  "keywords": [
    "cli",
    "acp",
    "bridge",
    "meshaway"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@base-ui/react": "^1.0.0-beta.6",
    "@hono/node-server": "^1.14.4",
    "ansi-to-react": "^6.2.6",
    "arktype": "^2.1.29",
    "chalk": "^5.3.0",
    "commander": "^14.0.1",
    "hono": "^4.9.6",
    "lucide-react": "^0.542.0",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "prism-react-renderer": "^2.4.1",
    "prismjs": "^1.30.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.0.1"
  },
  "devDependencies": {
    "@github/copilot-sdk": "^0.1.25",
    "@google/gemini-cli": "^0.28.0",
    "opencode-ai": "^1.2.0",
    "@types/node": "^24.3.3",
    "@types/prismjs": "^1.26.6",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.25",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.10",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^6.0.3",
    "vitest": "^4.0.18"
  },
  "optionalDependencies": {
    "better-sqlite3": "^11.6.0"
  },
  "packageManager": "pnpm@10.27.0"
}
