{
  "name": "meshaway",
  "version": "0.1.0",
  "description": "The Universal SDK Bridge for AI Agents. ",
  "type": "module",
  "bin": {
    "meshaway": "./dist/meshaway.cjs"
  },
  "scripts": {
    "build": "node ./esbuild.config.mjs && node ./scripts/build-ui-assets.mjs",
    "dev": "tsx src/index.ts",
    "start": "node dist/meshaway.cjs",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:watch": "vitest",
    "smoke": "tsx ./tests/smoke.ts",
    "build:native": "npm run build && node scripts/build-sea.mjs"
  },
  "keywords": [
    "cli",
    "acp",
    "bridge",
    "hono",
    "meshaway"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@base-ui/react": "^1.0.0-beta.6",
    "@hono/node-server": "^1.14.4",
    "arktype": "^2.1.29",
    "commander": "^14.0.1",
    "esbuild": "^0.25.10",
    "hono": "^4.9.6",
    "lucide-react": "^0.542.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.42",
    "@github/copilot-sdk": "^0.1.23",
    "@types/node": "^24.3.3",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "postject": "^1.0.0-alpha.6",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^4.0.18"
  }
}
